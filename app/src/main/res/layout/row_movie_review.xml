<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/clrBackground"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardElevation="@dimen/cvElev">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding_medium_large" />

        <TextView
            android:id="@+id/tv_review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="@dimen/padding_medium_large"
            android:paddingBottom="@dimen/padding_medium_large"
            android:paddingRight="@dimen/padding_medium_large"
            android:textColor="@color/clrText"
            android:textSize="@dimen/text_sz_medium" />


    </LinearLayout>



</android.support.v7.widget.CardView>